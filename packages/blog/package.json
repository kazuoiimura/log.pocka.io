{
  "name": "@log.pocka.io/blog",
  "description": "Repositry for log.pocka.io",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "jest --color",
    "build": "npm run clean && NODE_ENV=production webpack --mode production",
    "dev": "webpack-dev-server --mode development",
    "storybook": "start-storybook -c .storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook"
  },
  "author": "pocka",
  "dependencies": {
    "@log.pocka.io/posts": "^0.0.0",
    "@ungap/custom-elements-builtin": "^0.1.2",
    "core-js": "^3.0.1",
    "date-fns": "^1.30.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@storybook/addon-a11y": "^5.0.6",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-centered": "^5.0.6",
    "@storybook/addon-knobs": "^5.0.6",
    "@storybook/addon-notes": "^5.0.6",
    "@storybook/addon-viewport": "^5.0.6",
    "@storybook/html": "^5.0.6",
    "@types/jest": "^24.0.12",
    "@types/webpack-env": "^1.13.9",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "faker": "^4.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.6.0",
    "postcss": "^7.0.14",
    "postcss-custom-media": "^7.0.8",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.6.0",
    "prerender-loader": "^1.3.0",
    "raw-loader": "^2.0.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "storybook-addon-designs": "^5.0.0",
    "style-ext-html-webpack-plugin": "^4.0.1",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "uglify-template-string-loader": "^1.1.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "postcss-custom-media": {
        "importFrom": "./src/media.css"
      },
      "postcss-preset-env": {},
      "cssnano": {}
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions",
    "last 1 iOS versions",
    "last 1 Safari versions"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
