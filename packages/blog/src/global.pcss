html {
  font-size: 62.5%;
  font-family: Roboto, 'Noto Sans JP', sans-serif;
}

body {
  margin: 0;
  font-size: 1.6rem;
}

* {
  box-sizing: border-box;
}

:root {
  --color-primary: #405818;
  --color-secondary: #efcb68;

  --color-bg: #eff1f3;
  --color-bg-transparent: rgba(239, 241, 243, 0);
  --color-fg: #231c07;
  --color-fg-sub: #635d49;
  --color-fg-light: #c5c5c5;
  --color-border: #b4af9d;
}

.paragraph {
  line-height: 1.15;
}
